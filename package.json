{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "16 || 18"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new --scope internal",
    "version": "changeset version && yarn install && (git commit -am 'Update internal dependencies' || true)",
    "release": "changeset publish",
    "prepare": "husky install",
    "postinstall": "husky install || true",
    "start-db": "docker run --name codemods-pg -e POSTGRES_PASSWORD=mysecretpassword -p 4242:5432 -d postgres:14-alpine",
    "stop-db": "docker rm -fv codemods-pg"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0"
  },
  "devDependencies": {
    "@backstage/cli": "^0.22.1",
    "@microsoft/api-extractor": "^7.33.8",
    "@spotify/prettier-config": "^12.0.0",
    "concurrently": "^6.0.0",
    "lint-staged": "^13.0.3",
    "node-gyp": "^9.0.0",
    "prettier": "^2.3.2",
    "typescript": "~4.9.5"
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
